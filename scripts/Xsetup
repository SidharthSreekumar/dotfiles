#!/bin/sh
# Automatically generated by EnvyControl
# The location for this file in arch-based systems is /usr/share/sddm/scripts/Xsetup
xrandr --setprovideroutputsource "modesetting" NVIDIA-0
# xrandr --output DP-0 --primary --mode 2560x1440 --pos 1920x0 --rotate normal --output eDP-1-1 --mode 1920x1080 --pos 0x360 --rotate normal
#xrandr --output eDP-1-1 --mode 1920x1080 --rotate normal
# Get the status of the external monitor (DP-0)
EXTERNAL_MONITOR=$(xrandr | grep "DP-0 connected")

if [ -n "$EXTERNAL_MONITOR" ]; then
    # If DP-0 is connected, set it as the primary monitor
    xrandr --output DP-0 --primary --mode 2560x1440 --pos 1920x0 --rotate normal --output eDP-1-1 --mode 1920x1080 --pos 0x360 --rotate normal
else
    # If DP-0 is not connected, use only the internal monitor (eDP-1-1)
    xrandr --output eDP-1-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal
fi
